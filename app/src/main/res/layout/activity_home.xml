<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View"/>
        <variable
            name="product"
            type="anindya.ilovezappos.Product" />
    </data>


    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/main_content"
        style="@style/Screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/activity_vertical_margin">


        <LinearLayout
            android:id="@+id/activity_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:weightSum="1"
            tools:context="anindya.ilovezappos.Home">

            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Content"
                android:text="@string/intro" />

            <LinearLayout
                android:id="@+id/details"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <ImageView
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:src="@{product.image}"
                android:contentDescription="@string/product_image" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{product.brandName}" />

                    <TextView
                        style="@style/Product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{product.productName}" />


                </LinearLayout>

                <LinearLayout
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:layout_gravity="end"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        style="@style/Price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{product.price}"
                        android:layout_gravity="end"
                        android:gravity="end"/>

                    <TextView
                        android:id="@+id/original_price"
                        style="@style/Percent"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="@{product.originalPrice}"
                        android:visibility="@{product.discount == 0? View.GONE: View.VISIBLE}"/>

                    <TextView
                        style="@style/Percent"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="@{product.percentOff}"
                        android:visibility="@{product.discount == 0? View.GONE: View.VISIBLE}"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/more_info"
                    style="@style/Info"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@string/product_id" />

                    <TextView
                        android:id="@+id/productId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@{product.productId}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@string/color_id" />

                    <TextView
                        android:id="@+id/colorId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@{product.colorId}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@string/style_id" />

                    <TextView
                        android:id="@+id/styleId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@{product.styleId}" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/Content"
                        android:text="@string/product_url" />

                    <TextView
                        android:id="@+id/productUrl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        style="@style/Content"
                        android:text="@{product.productUrl}" />
                </LinearLayout>
            </LinearLayout>

            </LinearLayout>


        </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addtocart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="16dp"
            android:src="@drawable/addtocart"
            app:layout_anchorGravity="bottom|right|end" />

    </android.support.design.widget.CoordinatorLayout>


</layout>
